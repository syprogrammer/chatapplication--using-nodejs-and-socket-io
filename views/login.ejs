<!-- src/views/login.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login</title>

    <link rel="icon" type="image/png" href="/images/favicon-32x32.png" />
</head>
<style>
    body {
        font-family: 'Open Sans';
        /* background-image: url('/images/space-background.png'); */
    }

    #register-container {
        position: relative;
        top: 4rem;
        display: flex;
        margin: auto;
        align-items: center;
        justify-content: center;
        background-color: black;
        color: white;
        width: fit-content;
        padding: 2rem;
        border-radius: 15px;
    }

    #register-form {
        padding: 5px;
        display: flex;
        flex-direction: column;
    }

    input {
        width: 40vw;
        margin: 10px;
        border-radius: 10px;
        border: 1px solid rgb(15, 15, 15);
        padding: 10px;
    }

    button,
    h3 {
        width: 20vw;
        margin: auto;
        padding: 10px;
        border-radius: 10px;

    }

    header {}

    @keyframes mover {
        0% {
            transform: translateY(0);
        }

        100% {
            transform: translateY(-20px);
        }
    }

    h2,h4{
        margin: auto;
        width: fit-content;

    }

    img {
        width: 10rem;
        float: right;
        animation: mover 1s infinite alternate;
        margin-right: 1rem;
    }

    .register-btn {
        position: relative;
        top: 20px;
        border: 1px solid transparent;
        margin: auto;
        text-align: center;
        padding: 10px;

    }

    .register-btn a {
        text-decoration: none;
        border-radius: 12px;
        color: black;
        background-color: white;
        padding: 10px;
    }

    .register-btn a:hover {

        background-color: skyblue;
        cursor: grab;
    }

    .login-message {
        position: relative;
        top: 4rem;

    }
    .text-danger{
        color:red;
    }
</style>

<body>
    <div class="header">
        <h2>Chatcomss - made by syprogrammer</h2>
    </div>
    <div class="login-message">
        <h3>Login Here</h3>
        <% if(locals.error) {%>
            <h4 class="text-danger">
                <%=error%>

            </h4>
            <%}%>
                
    </div>
    <div id="register-container">

        <form action="/process_login" method="post" id="register-form">


            <label for="username">Username</label>
            <input type="text" placeholder="Email or Phone" name="username" id="username" autocomplete="off" required>

            <label for="password">Password</label>
            <input type="password" placeholder="Password" name="password" id="password" autocomplete="off" required>

            <button>Login</button>
            <div class="register-btn">
                <a href="/">Register Here</a>
            </div>
    </div>

    <div id="astronaut">
        <img src="/images/astronaut.png" alt="">
    </div>
    </form>
</body>

</html>